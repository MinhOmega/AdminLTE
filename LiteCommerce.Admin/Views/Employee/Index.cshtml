@{
    ViewBag.Title = "Employee";
}

<div class="box box-info">
    <div class="box-body">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" placeholder="Input search values....">
            <span class="input-group-btn">
                <button type="button" class="btn btn-info btn-flat">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</div>
<div class="container-fluid row" style="margin-bottom:10px">
    <div class="col-sm-8">
        There are <b>1,000</b> Employee found. Page 1/100.
    </div>
    <div class="col-md-4 text-right">

        <div class="btn-group">
            <a href="~/Employee/Input" class="btn btn-sm btn-success">Add Employee</a>
            <button type="button" class="btn btn-sm btn-danger">Delete Employee</button>
        </div>
    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="sw-30">
                        <input type="checkbox" />
                    </th>
                    <th class="sw-50">#</th>
                    <th class="sw-300">Name</th>
                    <th class="sw-200">Address</th>
                    <th class="sw-300">Contact Info</th>
                    <th class="sw-auto">Notes</th>
                    <th class="sw-100">Picture</th>
                    <th class="sw-100"></th>
                </tr>
            </thead>

            <tbody class="text-align">
                @{
                    for (int i = 1; i <= 3; i++)
                    {

                        <tr>
                            <td>
                                <input type="checkbox" />
                            </td>
                            <td>
                                @i
                            </td>
                            <td>
                                <span class="text-primary cnp-name">Last Name First name</span>
                                <br />Title: Sales Representative
                            </td>
                            <td>
                                507 - 20th Ave. E. Apt. 2A<br />
                                <span class="adr-cnt">Seattle - USA</span>
                            </td>
                            <td>
                                <span class="std-block"><i class="fa fa-phone"></i> (206) 555-9857</span>
                                <span class="std-block"><i class="fa fa-at"></i> davolio.nancy@company.com</span>
                                <span class="std-block"><i class="fa fa-birthday-cake"></i> 1959-01-07 00:00:00.000</span>
                                <span class="std-block"><i class="fa fa-users"></i> 2002-05-31 00:00:00.000</span>
                            </td>
                            <td>
                                Education includes a BA in psychology from Colorado State University in 1970.  She also completed "The Art of the Cold Call."  Nancy is a member of Toastmasters International.
                            </td>
                            <td>
                                <img style="width:100px; height:100px;" src="~/Themes/AdminLTE/dist/img/avatar5.png" />
                            </td>
                            <td class="text-center">
                                <!-- Button trigger modal -->
                                <a href="~/Employee/Input/@i" class="btn btn-primary center-block">
                                    <i class="fa fa-info"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>
    </div>
</div>