@model LiteCommerce.DomainModels.Employee
@{
    DateTime result = Model.BirthDate;
    string abc = result.ToString("dd/mm/yyyy");

}

<div class="box box-primary">
    <form role="form" name="abc">
        <div class="box-body">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <input name="employeeID" type="hidden" value="@Model.EmployeeID" />
                        <label for="exampleInputPassword1">Last Name</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Last Name" value="@Model.LastName">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="exampleInputPassword1">First Name</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="First Name" value="@Model.FirstName">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Title</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Title" value="@Model.Title">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">BirthDate</label>
                        <input type="date" class="form-control" id="exampleInputPassword1" >
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">HireDate</label>
                        <input type="date" class="form-control" id="exampleInputPassword1" value="@Model.HireDate">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Address</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Address" value="@Model.Address">
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">City</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="City" value="@Model.City">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Counntry</label>
                        <select class="countrypicker form-control" data-flag="true"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Home Phone</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Home Phone" value="@Model.HomePhone">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Email</label>
                        <input type="email" class="form-control" id="exampleInputPassword1" placeholder="Email" value="@Model.Email">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Photo Path</label>
                        <input type="file" class="form-control" id="exampleInputPassword1">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" value="@Model.Password">
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Note</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" value="@Model.Notes">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <div class="pull-right">
                <button type="submit" style="margin-right: 10px" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                <a href="~/Employee" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>
</div>