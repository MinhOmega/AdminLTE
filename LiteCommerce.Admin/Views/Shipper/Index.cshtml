
@{
    ViewBag.Title = "Shipper";
}

<div class="box box-info">
    <div class="box-body">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" placeholder="Input search values....">
            <span class="input-group-btn">
                <button type="button" class="btn btn-info btn-flat">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>

</div>
<div class="container-fluid row" style="margin-bottom:10px">
    <div class="col-sm-8">
        There are <b>1,000</b> Shipper found. Page 1/100.
    </div>
    <div class="col-md-4 text-right">

        <div class="btn-group">
            <a href="~/Shipper/Input" class="btn btn-sm btn-success">Add Shipper</a>
            <button type="button" class="btn btn-sm btn-danger">Delete Shipper</button>
        </div>

    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="sw-30">
                        <input type="checkbox" />
                    </th>
                    <th class="sw-50">#</th>
                    <th class="sw-auto">Company Name</th>
                    <th class="sw-auto">Phone</th>
                    <th class="sw-100"></th>

                </tr>
            </thead>

            <tbody class="text-align">
                @{
                    for (int i = 1; i <= 3; i++)
                    {

                        <tr>
                            <td>
                                <input type="checkbox" />
                            </td>
                            <td>
                                @i
                            </td>
                            <td>
                                <span class="text-primary cnp-name">Speedy Express</span>
                            </td>
                            <td>
                                <span>(503) 555-9831</span>
                            </td>
                            <td class="text-center">
                                <!-- Button trigger modal -->
                                <a href="~/Shipper/Input/@i" class="btn btn-primary center-block">
                                    <i class="fa fa-info"></i>
                                </a>


                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>
    </div>
</div>

